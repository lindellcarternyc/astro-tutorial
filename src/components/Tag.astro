---
const { tag } = Astro.props as { tag: string }
---

<p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>

<style>
  a {
    color: #00539f;
  }

  .tag {
    margin: .25rem;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>